<h1 class="title">EDIT PLAYER</h1>

<div class="form">
  <%= form_for :player, url: player_path(@player), method: :patch do |f| %>
  <div class="row">
			<span class="form-label">NAME</span>
			<span><%= f.text_field :name, class: 'form-text', autocomplete: :off %></span>
		</div>

		<div class="row">
			<span class="form-label">ALIAS</span>
			<span><%= f.text_field :alias, class: 'form-text', autocomplete: :off %></span>
		</div>

		<div class="buttons">
			<%= f.submit 'EDIT', class: 'form-btn black-btn' %>
      <%= link_to 'CANCEL', player_path(@player), class: 'form-btn grey-btn align-center' %>
		</div>
	<% end %>
</div>
